<script>
    $(document).ready(function () {
        // Attach an event listener to all subject dropdowns
        $('.subject-dropdown').change(function () {
            // Get the selected option value
            var selectedValue = $(this).val();

            // Loop through all subject dropdowns
            $('.subject-dropdown').each(function () {
                // Disable all options in other subject dropdowns
                var otherDropdown = $(this);
                otherDropdown.find('option').prop('disabled', false);

                // Exclude the currently selected option
                if (otherDropdown !== $(this)) {
                    otherDropdown.find('option[value="' + selectedValue + '"]').prop('disabled', true);
                }
            });
        });
    });
</script>

